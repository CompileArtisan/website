---
import { NAV_ITEMS } from '../config';
---


<div class="navbar">
    {NAV_ITEMS.map(item => (
        <a href={item.path} class={Astro.url.pathname === item.path ? 'active' : ''}>
            {item.label}
        </a>
    ))}
</div>
<div class="mobile-menu">
    <input type="checkbox" id="menu-toggle" class="menu-toggle">
    <label for="menu-toggle" class="menu-icon">
        <span></span>
        <span></span>
        <span></span>
    </label>

    <div class="page-title">
        {NAV_ITEMS.find(item => item.path === Astro.url.pathname)?.label || 'Page'}
    </div>

    <div class="menu-spacer"></div>

    <div class="mobile-menu-content">
        {NAV_ITEMS.map(item => (
            <a href={item.path} class={Astro.url.pathname === item.path ? 'active' : ''}>
                {item.label}
            </a>
        ))}
    </div>
</div>
